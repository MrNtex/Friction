{
  "name": "friction.",
  "description": "Extra layer of friction against social media",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": [
    "storage" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "friction.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.instagram.com/*",
        "*://*.reddit.com/*",
        "*://*.linkedin.com/*",
        "*://*.youtube.com/*",
        "*://*.tiktok.com/*"
      ],
      "js": ["config.js","content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ] 
}